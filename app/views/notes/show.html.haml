- page_title "#{Note.model_name.human}: #{@note}"
- breadcrumb :note, @note

-#
-# Content
-#

.container.m-full-width
  .row
    .card-panel.m-no-margin-horizontal.qa-note[@note]
      = render 'notes/info', note: @note
      %p= raw(@note.content)
      %br
      = render "notes/buttons", note: @note, klass: "btn-flat waves-effect"

  .row
    = render "comments/form", item: @note

