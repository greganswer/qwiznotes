- klass ||= "btn waves-effect margin4 width9em"
- full_view = true if full_view.nil?


%span.note-buttons
  %span{ id: "vote_#{note.model_name.singular}_#{note.id}" }
    = render "votes/button", item: note

  - if policy(note).show?
    = link_to_hash_if_current t('button.view'), note, class: klass

  - if policy(note).review?
    = link_to_hash_if_current t('app.review'), [:review, note], class: klass

  - if policy(note).quiz?
    = link_to_hash_if_current Quiz.model_name.human, [:quiz, note], class: klass


  - if policy(note).edit?
    - if full_view
      = link_to_hash_if_current t('button.edit'), [:edit, note], class: klass

      - if policy(note).destroy?
        = link_to_hash_if_current t('button.delete'), note, method: :delete, data: { confirm: t("note.confirm_delete") }, class: klass

    - else

      %button.flat.secondary-color-text.dropdown-button.right{"data-activates": "note_dropdown_#{note.id}"}
        = material_icon.more_vert

      %ul.dropdown-content{ id: "note_dropdown_#{note.id}" }
        %li
          = link_to_hash_if_current [:edit, note], class: klass do
            = fa_icon("pencil")
            = t('button.edit')

        - if policy(note).destroy?
          %li
            = link_to_hash_if_current note, method: :delete, data: { confirm: t("note.confirm_delete") }, class: klass do
              = fa_icon("times")
              = t('button.delete')
