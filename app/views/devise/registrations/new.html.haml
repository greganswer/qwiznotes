- breadcrumb :new_user_registration

.container.max-width600
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render 'form_errors', record: resource

    .card.padding32.margin-horizontal
      .form-inputs
        = f.input :email, required: true, autofocus: true
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)

      %p.grey-text= t('app.required_fields')
      %br
      .form-actions= f.button :submit, t('devise.registrations.new.submit'), class: 'width-100percent'
      %br
      = render "devise/shared/links"
