- breadcrumb :edit_user_registration

.container.max-width600.s-full-width
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render 'form_errors', record: resource

    .card-panel.margin-horizontal
      .form-inputs
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p= t('devise.registrations.edit.waiting_for_confirmation', email: resource.unconfirmed_email}

      = f.input :password, autocomplete: "off", hint: t('devise.registrations.edit.password_hint'), required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: t('devise.registrations.edit.current_password_hint'), required: true
    = render 'form_submit_button', f: f, submit_text: t('devise.registrations.edit.title')
    = render "devise/shared/links"

.empty-space

.center
  = link_to t('devise.registrations.destroy.title'), registration_path(resource_name), data: { confirm: t('app.are_you_sure') }, method: :delete
