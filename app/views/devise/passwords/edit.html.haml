-#
-# Meta
-#

- page_title t(".change_your_password")
- breadcrumb :edit_user_password

-#
-# Content
-#

.container.max-width600
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = render "form_errors", record: resource
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token

    .card-panel
      = f.input :password, label: t(".new_password"), required: true, autofocus: true, hint: (t("app.minimum_characters", count: @minimum_password_length) if @minimum_password_length)
      = f.input :password_confirmation, required: true
      = render "devise/shared/links"

    = render "buttons/submit", f: f, submit_text: t(".change_my_password")
